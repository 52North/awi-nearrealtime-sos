<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class mutable="false" name="org.n52.sensorweb.awi.data.entities.DataView" optimistic-lock="version" schema="public"
           table="dataview"  where="value is not null and date is not null">
        <id column="data_id" name="id" type="int"/>
        <property column="date" name="time" type="timestamp"/>
        <property column="value" name="value" type="double"/>
        <property name="geometry"
                  type="org.hibernate.spatial.GeometryType"
                  formula="ST_SetSRID(ST_MakePoint(longitude, latitude), 4326)"  />
        <property column="code" name="code" type="string"/>
        <many-to-one class="org.n52.sensorweb.awi.data.entities.Sensor" column="sensor_id" fetch="join" lazy="false" name="sensor"/>
    </class>
</hibernate-mapping>
