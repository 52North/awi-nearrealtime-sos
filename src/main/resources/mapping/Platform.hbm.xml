<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class mutable="false" name="org.n52.sensorweb.awi.data.entities.Platform" optimistic-lock="version" schema="public" table="platform"
           where="code is not null and type is not null and public is true">
        <id column="platform_id" name="id" type="int"/>
        <property column="platform" name="name" type="string"/>
        <property name="code" type="string" formula="type || ':' || code"/>
        <property name="geometry"
                  type="org.hibernate.spatial.GeometryType"
                  formula="ST_SetSRID(ST_MakePoint(longitude, latitude), 4326)"  />
        <set fetch="join" inverse="true" lazy="false" name="devices" table="device">
            <key column="platform_id"/>
            <one-to-many class="org.n52.sensorweb.awi.data.entities.Device"/>
        </set>
        <set fetch="select" inverse="true" lazy="true" name="expeditions" table="v_expedition">
            <key column="platform_id"/>
            <one-to-many class="org.n52.sensorweb.awi.data.entities.Expedition"/>
        </set>
    </class>
</hibernate-mapping>

