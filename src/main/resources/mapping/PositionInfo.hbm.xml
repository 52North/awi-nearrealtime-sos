<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class mutable="false" name="org.n52.sensorweb.awi.data.entities.PositionInfo" optimistic-lock="version" schema="public" table="position">
        <composite-id>
            <key-many-to-one class="org.n52.sensorweb.awi.data.entities.Platform" column="platform_id" name="platform"/>
            <key-many-to-one class="org.n52.sensorweb.awi.data.entities.Device" column="device_id" name="device"/>
            <key-many-to-one class="org.n52.sensorweb.awi.data.entities.Sensor" column="sensor_id" name="sensor"/>
        </composite-id>
        <many-to-one class="org.n52.sensorweb.awi.data.entities.Sensor" column="latitude" fetch="select" name="latitude"/>
        <many-to-one class="org.n52.sensorweb.awi.data.entities.Sensor" column="longitude" fetch="select" name="longitude"/>
    </class>
</hibernate-mapping>
